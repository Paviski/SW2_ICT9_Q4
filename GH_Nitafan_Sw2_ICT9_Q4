	<script>
	function HrSec(){
		var x, y
	 	x = (document.getElementById('hours').value);
	 	y = 3600
	 	alert(x * y);
	 }
	 function HrMin(){
	 	var x, y
	 	x = (document.getElementById('hours').value);
	 	y = 60
	 	alert(x * y);
	 }
	 function HrDt(){
	 	var x, y
	 	x = (document.getElementById('hours').value);
	 	y  = 24
	 	alert(x / y);
	 }
	
	</script>
